{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "noEmit": true,
    "rootDir": "src",
    "isolatedModules": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
